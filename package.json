{
  "name": "theo-core",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:all": "docker compose up -d && next dev",
    "dev:tools": "docker compose --profile tools up -d",
    "dev:aws": "docker compose --profile aws up -d",
    "commit:check": "npm run lint && npm run type-check && npm run test && npm run build",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:start": "docker compose up -d postgres redis",
    "db:stop": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d --wait postgres redis && npm run db:push",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx scripts/seed.ts",
    "db:encrypt-tokens": "tsx scripts/encrypt-tokens.ts",
    "queue": "tsx scripts/queue-manager.ts",
    "db:generate": "prisma generate",
    "docker:clean": "docker compose down -v --remove-orphans",
    "docker:logs": "docker compose logs -f",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.2.0",
    "@auth/prisma-adapter": "^2.11.1",
    "@prisma/client": "^6.0.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.4",
    "bullmq": "^5.66.2",
    "chrono-node": "^2.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.1",
    "googleapis": "^169.0.0",
    "ioredis": "^5.8.2",
    "lucide-react": "^0.562.0",
    "luxon": "^3.7.2",
    "next": "16.1.0",
    "next-auth": "^5.0.0-beta.30",
    "openai": "^6.15.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.6.0",
    "zod": "^4.2.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/dompurify": "^3.0.5",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "prisma": "^6.0.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^2.1.0"
  }
}
